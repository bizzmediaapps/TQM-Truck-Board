{
  "project": {
    "name": "Soccer Scoreboard LED Display",
    "version": "1.0.0",
    "description": "High-performance soccer scoreboard optimized for Viplex Software Large LED Screens",
    "type": "web-application"
  },
  "display": {
    "resolution": {
      "recommended": {
        "width": 1920,
        "height": 1080,
        "aspectRatio": "16:9"
      },
      "supported": [
        {"width": 1280, "height": 720, "name": "HD"},
        {"width": 1920, "height": 1080, "name": "Full HD"},
        {"width": 2560, "height": 1440, "name": "2K"},
        {"width": 3840, "height": 2160, "name": "4K UHD"},
        {"width": 7680, "height": 4320, "name": "8K UHD"}
      ]
    },
    "pixelPitch": {
      "indoor": ["P1.25", "P1.538", "P1.86", "P2", "P2.5", "P3"],
      "outdoor": ["P3", "P4", "P5", "P6", "P8", "P10"]
    },
    "refreshRate": {
      "minimum": 60,
      "recommended": 120,
      "maximum": 240,
      "unit": "Hz"
    },
    "brightness": {
      "indoor": {
        "minimum": 800,
        "maximum": 1200,
        "unit": "cd/m²"
      },
      "outdoor": {
        "minimum": 5000,
        "maximum": 10000,
        "unit": "cd/m²"
      }
    },
    "colorDepth": {
      "bits": 16,
      "grayScale": 65536
    },
    "viewingAngle": {
      "horizontal": 140,
      "vertical": 140,
      "unit": "degrees"
    }
  },
  "viplex": {
    "compatibility": {
      "software": "ViPlex Express",
      "mode": "Studio Mode",
      "playback": "Synchronous",
      "version": "2.0+"
    },
    "mediaFormats": {
      "video": {
        "supported": [".mp4", ".avi", ".mov", ".wmv", ".webm", ".mkv"],
        "recommended": ".mp4",
        "codec": "H.264",
        "maxFileSize": "100MB",
        "maxBitrate": "20Mbps"
      },
      "image": {
        "supported": [".jpg", ".jpeg", ".png", ".gif", ".bmp"],
        "recommended": ".png",
        "maxFileSize": "50MB",
        "maxResolution": "4096x4096"
      },
      "audio": {
        "supported": [".mp3", ".wav", ".aac"],
        "recommended": ".mp3",
        "maxFileSize": "10MB"
      }
    },
    "networking": {
      "connection": "Ethernet",
      "protocol": "TCP/IP",
      "ports": {
        "control": 5200,
        "data": 5201,
        "backup": 5202
      },
      "bandwidth": "1Gbps recommended"
    }
  },
  "performance": {
    "optimization": {
      "hardware_acceleration": true,
      "gpu_rendering": true,
      "memory_management": "aggressive",
      "cpu_throttling": false
    },
    "caching": {
      "enabled": true,
      "size": "512MB",
      "strategy": "LRU"
    },
    "updates": {
      "interval": 2000,
      "unit": "milliseconds",
      "adaptive": true
    }
  },
  "features": {
    "scoreboard": {
      "teams": 2,
      "scoreRange": {"min": 0, "max": 999},
      "timer": true,
      "logos": true,
      "customStatus": true
    },
    "media": {
      "hotkeys": ["1", "2", "3", "4", "5", "6", "7", "8", "9", "0"],
      "autoHide": true,
      "fullscreen": true,
      "aspectRatioMaintain": true
    },
    "control": {
      "webInterface": true,
      "api": true,
      "realTimeUpdates": true,
      "remoteAccess": true
    }
  },
  "installation": {
    "requirements": {
      "server": {
        "node": ">=14.0.0",
        "memory": ">=2GB",
        "storage": ">=10GB",
        "network": "1Gbps"
      },
      "display": {
        "controller": "NovaStar compatible",
        "software": "ViPlex Express",
        "resolution": ">=1920x1080",
        "refreshRate": ">=60Hz"
      }
    },
    "deployment": {
      "platform": "Vercel",
      "cdn": true,
      "ssl": true,
      "compression": true
    }
  },
  "quality": {
    "testing": {
      "resolutions": ["1920x1080", "2560x1440", "3840x2160"],
      "browsers": ["Chrome", "Firefox", "Safari", "Edge"],
      "devices": ["Desktop", "Tablet", "LED Controller"]
    },
    "standards": {
      "accessibility": "WCAG 2.1",
      "performance": "Core Web Vitals",
      "reliability": "99.9% uptime"
    }
  },
  "maintenance": {
    "monitoring": {
      "uptime": true,
      "performance": true,
      "errors": true,
      "alerts": true
    },
    "backup": {
      "frequency": "daily",
      "retention": "30 days",
      "cloud": true
    },
    "updates": {
      "automatic": false,
      "testing": true,
      "rollback": true
    }
  }
}